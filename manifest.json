{
    "manifest_version": 2,
    "name": "Text to Google Doc",
    "version": "1.0",
    "description": "A Chrome extension to send selected text to a Google Doc",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "identity",
        "https://www.googleapis.com/auth/documents",
        "https://www.googleapis.com/auth/drive.file"
    ],
    "oauth2": {
        "client_id": "1859181707-cmecvlvr1rnlmt4a8i1tk0eda5nsvi8n.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/documents",
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}